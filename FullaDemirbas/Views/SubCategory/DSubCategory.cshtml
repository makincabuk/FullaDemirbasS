@using EntityLayer.Concrete;
@model List<SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <p align="right">
            <a href="/SubCategory/AddSubCategory" class="btn btn-info">Alt Kategori Ekle</a>
        </p>
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                    </h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <!-- Default box -->
        <div class="card collapsed-card">
            <div class="card-header">
                <h3 class="card-title">Alt Kategori Pasif Tablosu</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Katagori Adı
                            </th>
                            <th style="width: 30%">
                                Alt Katagori Adı
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.SubCategoryStatus == false)
                            {


                                <tr>
                                    <td>
                                        @item.SubCategoryID
                                    </td>
                                    <td>
                                        @item.Category.CategoryName
                                    </td>
                                    <td>
                                        @item.SubCategoryName
                                    </td>
                                    @*<td class="project-state">
                                            <span class="badge badge-success">Success</span>
                                        </td>*@
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Fixture/FixtureBySubCategory/@item.SubCategoryID">
                                            <i class="fas fa-folder">
                                            </i>
                                            Demirbaşlar
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/SubCategory/EditSubCategory/@item.SubCategoryID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-success btn-sm" href="/SubCategory/EnableSubCategory/@item.SubCategoryID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Et
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

