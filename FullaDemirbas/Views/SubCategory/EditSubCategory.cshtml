@model EntityLayer.Concrete.SubCategory

@{
    ViewBag.Title = "EditSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Alt Katagori Güncelleme sayfası</h2>
@using (Html.BeginForm("EditSubCategory", "SubCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık ID :")
        @Html.TextBoxFor(x => x.SubCategoryID, new { @class = "form-control", @readonly = false })
        <br />
        @Html.Label("Alt Kategori Adı :")
        @Html.TextBoxFor(x => x.SubCategoryName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı :")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlsc, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}

