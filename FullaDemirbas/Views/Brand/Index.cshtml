

@using EntityLayer.Concrete;
@model List<Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<p align="right">
    <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">
        Marka Ekle
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    Marka Bilgilerini Giriniz
                </div>
                <form method="post" action="/Brand/AddBrand/" >
                    <div class="modal-body">
                        <label>Marka Adı</label>
                        <input type="text" name="BrandName" class="form-control" />
                        <br />
                        <button class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</p>


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
  
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Alt Kategori Aktif Tablosu</h1>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Marka Adı
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.BrandStatus)
                            {


                                <tr>
                                    <td>
                                        @item.BrandID
                                    </td>
                                    <td>
                                        @item.BrandName
                                    </td>
                                    @*<td class="project-state">
                                            <span class="badge badge-success">Success</span>
                                        </td>*@
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Fixture/FixtureBySubCategory/">
                                            <i class="fas fa-folder">
                                            </i>
                                            Modeller
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Brand/EditBrand/@item.BrandID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Brand/DisableBrand/@item.BrandID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Et
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <br /><br />
    <section class="content">
        <!-- Default box -->
        <div class="card card">
            <div class="card-header">
                <h3 class="card-title">Alt Kategori Pasif Tablosu</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Marka Adı
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.BrandStatus == false)
                            {


                                <tr>
                                    <td>
                                        @item.BrandID
                                    </td>
                                    <td>
                                        @item.BrandName
                                    </td>
                                    @*<td class="project-state">
                                            <span class="badge badge-success">Success</span>
                                        </td>*@
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Fixture/FixtureBySubCategory/">
                                            <i class="fas fa-folder">
                                            </i>
                                            Modeller
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Brand/EditBrand/@item.BrandID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-success btn-sm" href="/Brand/EnableBrand/@item.BrandID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Et
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

