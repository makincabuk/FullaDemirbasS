@using EntityLayer.Concrete
@*@model1 List<FixtureModel>*@
@*@model EntityLayer.Concrete.FixtureModel*@
@model Tuple<List<FixtureModel>>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <p align="right">
            <a href="/FixtureModel/AddFixtureModel" class="btn btn-info">Model Ekle</a>
        </p>
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                    </h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Aktif Modeller</h1>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 15%">
                                Demirbaş Adı
                            </th>
                            <th style="width: 15%">
                                Demirbaş Kategori Adı
                            </th>
                            <th style="width: 15%">
                                Demirbaş Alt Kategori Adı
                            </th>
                            <th style="width: 15%">
                                Demirbaş Marka Adı
                            </th>
                            <th style="width: 15%">
                                Demirbaş Model Adı
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {

                            if (item.FixtureModelStatus)
                            {


            <tr>
                <td>
                    @item.FixtureModelId
                </td>
                <td>
                    @item.FixtureModelName
                </td>
                <td>
                    @item.SubCategory.Category.CategoryName
                </td>
                <td>
                    @item.SubCategory.SubCategoryName
                </td>
                <td>
                    @item.Model.Brand.BrandName
                </td>
                <td>
                    @item.Model.ModelName
                </td>
                @*<td class="project-state">
                        <span class="badge badge-success">Success</span>
                    </td>*@
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" href="/Fixture/FixtureBySubCategory/">
                        <i class="fas fa-folder">
                        </i>
                        Demirbaşlar
                    </a>
                    <a class="btn btn-info btn-sm" href="/FixtureModel/EditFixtureModel/@item.FixtureModelId">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                    <a class="btn btn-danger btn-sm" href="/FixtureModel/DisableFixtureModel/@item.FixtureModelId">
                        <i class="fas fa-trash">
                        </i>
                        Pasif Et
                    </a>
                </td>
            </tr>}
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
