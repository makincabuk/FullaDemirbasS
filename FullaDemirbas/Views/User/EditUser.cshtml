@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Güncelle</h2>

@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kullanıcı ID :")
        @Html.TextBoxFor(x => x.UserID, new { @class = "form-control", @readonly = false })
        <br />
        @Html.Label("Kullanıcı Adı :")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserName)
        <br />
        @Html.Label("Adı :")
        @Html.TextBoxFor(x => x.Uname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Uname)
        <br />
        @Html.Label("Soyadı :")
        @Html.TextBoxFor(x => x.USurName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.USurName)
        <br />
        @Html.Label("Resim :")
        @Html.TextBoxFor(x => x.Usermage, new { @class = "form-control", @readonly = false })
        @Html.ValidationMessageFor(x => x.Usermage)
        <br />
        @Html.Label("Mail Adresi :")
        @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserMail)
        <br />
        @Html.Label("Telefon Numarası :")
        @Html.TextBoxFor(x => x.UserPhone, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserPhone)
        <br />
        @Html.Label("Parola :")
        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserPassword)
        <br />
        @Html.Label("Mağaza Seçiniz : 1")
        @Html.TextBoxFor(x => x.StoreID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.StoreID)
        <br />
        @Html.Label("Durumu : 1")
        @Html.TextBoxFor(x => x.UserStatus, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UserStatus)
        <br />
        <button class="btn btn-success">Kullanıcı Ekle</button>

    </div>

}